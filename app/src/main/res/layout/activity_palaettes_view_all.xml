<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".viewAll.PalettesViewAll">

    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/toolbar_background"
        android:elevation="12dp"
        android:gravity="center_vertical"
        >
        <TextView
            android:id="@+id/Cat_head"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Palette"
            android:gravity="left|center"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/nunitobold"
            android:textSize="40dp"
            android:textColor="#2D3E50"/>
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:descendantFocusability="blocksDescendants">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/thecolortone"
                android:layout_width="match_parent"
                android:layout_height="285dp"
                android:layout_marginTop="10dp"
                android:elevation="12dp"
                android:orientation="vertical"
                >

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    app:cardElevation="12dp"
                    app:cardCornerRadius="10dp"
                    >



                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rcv_regular"
                        android:layout_width="match_parent"
                        android:layout_height="210dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginBottom="30dp"
                        android:background="@drawable/fourcorners"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:fontFamily="@font/nunitosemibold"
                        android:text="Regular Palette"
                        android:paddingLeft="10dp"
                        android:textColor="#2D3E50"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="5dp"
                        android:textSize="24dp" />

                </androidx.cardview.widget.CardView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="285dp"
                android:elevation="12dp"
                android:orientation="vertical"
                >

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    app:cardElevation="12dp"
                    app:cardCornerRadius="10dp"
                    >



                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rcv_american"
                        android:layout_width="match_parent"
                        android:layout_height="210dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginBottom="30dp"
                        android:background="@drawable/fourcorners"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:fontFamily="@font/nunitosemibold"
                        android:text="American Palette"
                        android:paddingLeft="10dp"
                        android:textColor="#2D3E50"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="5dp"
                        android:textSize="24dp" />

                </androidx.cardview.widget.CardView>


            </LinearLayout><LinearLayout
                android:layout_width="match_parent"
                android:layout_height="285dp"
                android:elevation="12dp"
                android:orientation="vertical"
                >

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    app:cardElevation="12dp"
                    app:cardCornerRadius="10dp"
                    >



                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rcv_aussie"
                        android:layout_width="match_parent"
                        android:layout_height="210dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginBottom="30dp"
                        android:background="@drawable/fourcorners"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:fontFamily="@font/nunitosemibold"
                        android:text="Aussie Palette"
                        android:paddingLeft="10dp"
                        android:textColor="#2D3E50"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="5dp"
                        android:textSize="24dp" />

                </androidx.cardview.widget.CardView>


            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>